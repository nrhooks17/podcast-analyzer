# Environment Configuration for Podcast Analyzer
# Copy this file to .env and fill in your actual values
# WARNING: Never commit this file with real values

# Database Configuration
POSTGRES_DB=podcast_analyzer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# API Keys - REQUIRED for AI functionality
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get Serper API key from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# Application Settings
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000
SERVER_PORT=8001

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8001
FRONTEND_PATH=../../../js/projects/podcast-analyzer-frontend

# Backend Configuration
BACKEND_PATH=.

# Storage Configuration
STORAGE_PATH=/app/storage/transcripts

# Database Connection
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/podcast_analyzer

